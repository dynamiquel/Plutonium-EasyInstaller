<local:NavigationPage x:Class="PlutoniumEasyInstaller.PiryInstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlutoniumEasyInstaller"
      mc:Ignorable="d" 
      Loaded="PageLoaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Install Privy">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Downloading Call of Duty: Black Ops 2" 
                   FontWeight="SemiBold"
                   FontSize="20"/>
            <TextBlock Text="About 14 GB - this may take a while depending on your internet connection..."
                       FontSize="14"/>
        </StackPanel>
        
        <RichTextBox Name="DownloadStatusText" 
                     Grid.Row="1"
                     IsReadOnly="True"
                     Margin="0,8,0,0"
                     FontSize="14"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</local:NavigationPage>
